# Django settings module to use
DJANGO_SETTINGS_MODULE=config.django.test  # Options: config.django.dev | config.django.prod | config.django.test

# Environment name used during Docker image build. Determines which requirements file to install.
APP_ENV=test    # Options: dev | prod | test

# Debug mode (True for development, False for production)
DJANGO_DEBUG=True

# Secret key for Django (change in production!)
SECRET_KEY=your-secret-key-here

# Allowed hosts (comma-separated or *)
ALLOWED_HOSTS=*

# URL to fetch district data (you can set this to a mock or local source in dev)
DISTRICT_DATA_URL=https://your-district-data-source-url.com/bd-districts.json